pipeline
{
	agent any
	
	options
	{
		skipDefaultCheckout()
		disableConcurrentBuilds()
	}

	stages
	{
		stage('Checkout Code')
		{
			steps
			{
				script
				{
					def scmVars = checkout scm
					echo scmVars
				}
			}
		}

		stage('Build Code')
		{
			steps
			{
				build job: 'airwolf-build-job'
			}
		}

		stage('Test Code')
		{
			steps
			{
				sh 'mvn test'
			}
		}
	}

	post
	{
		success
		{
			script
			{
				if (scmVars.GIT_BRANCH == 'origin/master')
				{
					build job: 'airwolf-deploy-pipeline'
				}
			}
		}
	}
}